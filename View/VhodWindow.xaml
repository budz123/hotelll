<Window x:Class="Hotel.View.VhodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.View"
        mc:Ignorable="d"
        Title="VhodWindow" Height="400" Width="300" Background="#116466">
    <Grid>
        <StackPanel >

            <TextBlock Text="Логин" Height="22" Width="59" Margin="0,55,0,0" FontFamily="Times new Roman" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="Login" Style="{StaticResource AutorizationTextBox}" />
            <TextBlock Text="Пароль" Height="22" Width="66"  FontFamily="Times new Roman" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="Password" Style="{StaticResource AutorizationTextBox}"  />

           



            <Button  Margin="13,100,13,13" Content="Войти" FontSize="30" Style="{StaticResource StartWindosButtonsAlt}" Command="{Binding AddNewRoom}" CommandParameter="{Binding ElementName=AddRoomWnd}"  FontFamily="Times new Roman"/>
            <Button  Margin="13" Width="150" Content="Регистрация" FontSize="15" Style="{StaticResource StartWindosButtonsAlt}"    FontFamily="Times new Roman"/>
        </StackPanel>
    </Grid>
</Window>
